{
  "manifest_version": 3,
  "name": "Tech Detector Pro",
  "version": "1.0",
  "description": "Rileva le tecnologie utilizzate su un sito web, inclusi server, database, framework, CDN e molto altro",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}